{
  "name": "markdown-editor",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "supabase:start": "supabase start",
    "supabase:seed": "supabase db seed",
    "supabase:seed:reset": "supabase db reset",
    "supabase:migration:new": "supabase migration new",
    "supabase:migration:up": "supabase migration up",
    "supabase:migration:down": "supabase migration down",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/**/*",
    "packages/**/*"
  ]
}
